<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Create or Update Books</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/book" method="POST" autocomplete="off">
                    <input type="hidden" name="_id" value="{{Book._id}}">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Title</label>
                            <input type="text" class="form-control" name="title" placeholder="xyz"
                                value="{{Book.title}}">
                            <div class="text-danger">
                                {{Book.BookError}}</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Inventory count</label>
                            <input type="text" class="form-control" name="inventorycount" placeholder="1"
                                value="{{Book.inventory_count}}">
                            <div class="text-danger">
                                {{Book.inventoryError}}</div>
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-database"></i> Submit</button>
                        <a class="btn btn-info btn-sm" href="/book"><i class="fa fa-list-alt"></i> View All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
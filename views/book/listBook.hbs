<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>List of Books <a class="btn btn-info float-right btn-sm" href="/book/add"><i class="fa fa-plus"></i> Create New</a></h2>
        </div>
 
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Inventory Count</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each booklist}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.inventory_count}}</td>
                            <td>
                                <a href="/book/{{this._id}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                <a href="/book/delete/{{this._id}}"
                                    onclick="return confirm('Are you sure to delete this record ?');"><i
                                        class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
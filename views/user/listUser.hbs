<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>List of Users <a class="btn btn-info float-right btn-sm" href="/user/add/"><i class="fa fa-plus"></i> Create New</a></h2>
        </div>
 
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Phone Number</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each userlist}}
                        <tr>
                            <td>{{this.Username}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                <a href="/user/{{this._id}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                <a href="/user/delete/{{this._id}}"
                                    onclick="return confirm('Are you sure to delete this record ?');"><i
                                        class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
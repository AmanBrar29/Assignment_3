<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Create or Update Users</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/user" method="POST" autocomplete="off">
                    <input type="hidden" name="_id" value="{{user._id}}">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>User name</label>
                            <input type="text" class="form-control" name="username" placeholder="xyz"
                                value="{{user.username}}">
                            <div class="text-danger">
                                {{user.userError}}</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Phone</label>
                            <input type="text" class="form-control" name="phone" placeholder="123-456-7890"
                                value="{{user.phone}}">
                            <div class="text-danger">
                                {{user.phoneError}}</div>
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-database"></i> Submit</button>
                        <a class="btn btn-info btn-sm" href="/user"><i class="fa fa-list-alt"></i> View All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>